<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="0.0" prefWidth="300.0">
        <children>
            <MenuBar fx:id="menu" prefHeight="25.0" prefWidth="300.0">
                <menus>
                    <Menu mnemonicParsing="false" text="File">
                        <items>
                            <MenuItem fx:id="exit" mnemonicParsing="false" text="Exit"/>
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Attributes">
                        <items>
                            <RadioMenuItem mnemonicParsing="false" text="red" fx:id="red" userData="red"/>
                            <RadioMenuItem mnemonicParsing="false" text="blue" fx:id="blue" userData="blue"/>
                            <RadioMenuItem mnemonicParsing="false" text="green" fx:id="green" userData="green"/>
                            <RadioMenuItem mnemonicParsing="false" text="yellow" fx:id="yellow" userData="yellow"/>
                            <RadioMenuItem mnemonicParsing="false" text="cyan" fx:id="cyan" userData="cyan"/>
                            <RadioMenuItem mnemonicParsing="false" text="orange" fx:id="orange" userData="orange"/>
                            <RadioMenuItem mnemonicParsing="false" text="black" fx:id="black" userData="black" selected="true" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </children>
    </AnchorPane>
</fx:root>
